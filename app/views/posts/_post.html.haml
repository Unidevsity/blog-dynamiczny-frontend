.flex.flex-col.overflow-hidden.rounded-lg.shadow-lg
  .flex-shrink-0
    - if post.cover_image.attached?
      = image_tag post.cover_image, class: "h-48 w-full object-cover"
    - else
      %img.h-48.w-full.object-cover{:alt => "", :src => "https://images.unsplash.com/photo-1496128858413-b36217c2ce36?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1679&q=80"}/
  .flex.flex-1.flex-col.justify-between.bg-white.p-6
    .flex-1
      %p.text-sm.font-medium.text-indigo-600
        %a.hover:underline{:href => "#"} Article
      = link_to post do
        %p.text-xl.font-semibold.text-gray-900
          = post.title
        %p.mt-3.text-base.text-gray-500
          - if action_name == 'show'
            = post.body
          - else
            = post.excerpt
    .mt-6.flex.items-center
      .flex-shrink-0
        %a{:href => "#"}
          %span.sr-only Roel Aufderehar
          %img.h-10.w-10.rounded-full{:alt => "", :src => "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80"}/
      .ml-3
        %p.text-sm.font-medium.text-gray-900
          %a.hover:underline{:href => "#"} Roel Aufderehar
        .flex.space-x-1.text-sm.text-gray-500
          %time{:datetime => "2020-03-16"} Mar 16, 2020
          %span{"aria-hidden" => "true"} Â·
          %span 6 min read
